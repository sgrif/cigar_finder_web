<h1>Cigar Finder</h1>

<form id="new_search">
	<input type="text" name="cigar" id="new_search_cigar" />
	<input type="submit" value="Find it" />
</form>

<h2><%= @cigar %></h2>
<ul>
<% for result in @results.models: %>
	<li><%= result.get('cigar_store').name %>: <%= result.carriedDescription() %></li>
<% end %>
</ul>
